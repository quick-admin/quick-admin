.wrapper.wrapper-content.animated.fadeInRight
  .row
    .col-lg-12
      .ibox.float-e-margins
        .ibox-title
          = display resource
          .ibox-tools
            = show_action :back, :edit
        .ibox-content
          - columns = default_item_names resource
          .row
            - columns.each do |column|
              %div{class: "col-md-#{12/columns.size}"}
                = items resource, *column, class: "dl-horizontal"