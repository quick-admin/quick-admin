.row
  .col-lg-12
    .widget
      .widget-content
        .row
          .col-md-12
            .toolbar
              .pull-right
                = show_action :back, :edit
        - columns = default_item_names resource
        .row
          - columns.each do |column|
            %div{class: "col-md-#{12/columns.size}"}
              = items resource, *column, class: "dl-horizontal"