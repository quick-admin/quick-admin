- if actions.include?('new')
  = link_to url_for(action: :new), class: 'red item' do
    %i.fa.fa-plus
- if actions.include?("back")
  = link_to url_for(action: :index), class: 'item' do
    %i.fa.fa-list
    = t('.back', :default => t("helpers.links.back"))
- if actions.include?("edit")
  = link_to url_for(action: :edit), class: 'item'  do
    %i.fa.fa-wrench
    =t('.edit', :default => t("helpers.links.edit"))
-  if actions.include?("destroy")
  = link_to url_for(action: :destroy), :method => "delete", data: { confirm: t("helpers.links.confirm") }, class: 'item'  do
    %i.fa.fa-trash-o
    = t('.destroy', :default => t("helpers.links.destroy"))